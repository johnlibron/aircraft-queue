<h1>Aircrafts</h1>

<p><%= notice %></p>

<% if $aircrafts.length > 0 %>

  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Type</th>
        <th>Size</th>
      </tr>
    </thead>

    <tbody>
      <% $aircrafts.each_with_index do |aircraft, index| %>
        <tr>
          <td><%= index+1 %></td>
          <td><%= aircraft.name %></td>
          <td><%= aircraft.type %></td>
          <td><%= aircraft.size %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br />

  <%= button_to "Dequeue Aircraft", "dequeue", method: :delete, data: { confirm: "Are you sure you want to perform dequeue in the list?" } %>

  <br />

<% end %>

<%= button_to "Add Aircraft", aircrafts_new_path, method: :get %>